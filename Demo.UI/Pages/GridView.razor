<!--#region Code-->
@page "/grid"
@using Demo.DataModels
@using Demo.UI.Services
@inject IProductsService _productsService



@code {

    private IEnumerable<Product> Data = null;
    protected override async Task OnInitializedAsync()
    {
        //call the API
        await base.OnInitializedAsync();
        Data = await _productsService.getProducts();


    }
}
<!--#endregion-->

<!--#region html-->
<h3>GridView</h3>
 @if(Data is null)
            {
                <h1>Loading the thing...</h1>
            }
else
{
               
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Product Name</th>
                                <th>Product Price</th>
                                <th>Product Quantity</th>
                                <th>Product Brand</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Data)
                            {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Brand</td>
                                <td>@item.Price</td>
                                <td>@item.Quantity</td>
                            </tr>
                               
                            }
                        </tbody>
                    </table>
                
}


<!--#endregion-->
